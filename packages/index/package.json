{
  "name": "@hash-stream/index",
  "version": "0.0.0",
  "description": "The index client to use hash-stream",
  "repository": {
    "type": "git",
    "url": "https://github.com/vasco-santos/hash-stream.git",
    "directory": "packages/index"
  },
  "author": "Vasco Santos",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "types": "dist/src/index.d.ts",
  "main": "src/index.js",
  "scripts": {
    "attw": "attw --pack .",
    "lint": "eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "test": "npm run test:all",
    "test:all": "run-s test:browser test:node",
    "test:node": "hundreds -r html -r text mocha 'test/**/!(*.browser).test.js' -n experimental-vm-modules -n no-warnings",
    "test:browser": "playwright-test 'test/**/!(*.node).test.js'",
    "rc": "npm version prerelease --preid rc"
  },
  "exports": {
    ".": "./dist/src/index.js",
    "./reader": "./dist/src/reader.js",
    "./record": "./dist/src/record.js",
    "./utils": "./dist/src/utils.js",
    "./writer/single-level": "./dist/src/writer/single-level.js",
    "./writer/multiple-level": "./dist/src/writer/multiple-level.js",
    "./store/memory-blob": "./dist/src/store/memory-blob.js",
    "./store/memory-containing": "./dist/src/store/memory-containing.js",
    "./store/fs-blob": "./dist/src/store/fs-blob.js",
    "./store/fs-containing": "./dist/src/store/fs-containing.js",
    "./types": "./dist/src/api.js"
  },
  "typesVersions": {
    "*": {
      "types": [
        "dist/src/api"
      ],
      "reader": [
        "dist/src/reader.d.ts"
      ],
      "record": [
        "dist/src/record.d.ts"
      ],
      "utils": [
        "dist/src/utils.d.ts"
      ],
      "writer/single-level": [
        "dist/src/writer/single-level.d.ts"
      ],
      "writer/multiple-level": [
        "dist/src/writer/multiple-level.d.ts"
      ],
      "store/memory-blob": [
        "dist/src/store/memory-blob.d.ts"
      ],
      "store/memory-containing": [
        "dist/src/store/memory-containing.d.ts"
      ],
      "store/fs-blob": [
        "dist/src/store/fs-blob.d.ts"
      ],
      "store/fs-containing": [
        "dist/src/store/fs-containing.d.ts"
      ]
    }
  },
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.js.map",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "dependencies": {
    "@ipld/dag-json": "^10.2.3",
    "multiformats": "^13.3.2",
    "uint8arrays": "^5.1.0"
  },
  "devDependencies": {
    "@ipld/car": "^5.4.0",
    "@ipld/unixfs": "^3.0.0",
    "@hash-stream/eslint-config": "workspace:^",
    "@storacha/one-webcrypto": "^1.0.1",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@web3-storage/blob-index": "^1.0.5",
    "assert": "^2.1.0",
    "c8": "^10.1.3",
    "hundreds": "^0.0.9",
    "ipfs-car": "^3.0.0",
    "it-all": "^3.0.7",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "playwright-test": "^14.1.9",
    "typescript": "^5.8.2"
  },
  "eslintConfig": {
    "extends": [
      "@hash-stream/eslint-config"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "dist",
      "coverage",
      "src/types.js"
    ]
  },
  "depcheck": {
    "specials": [
      "bin"
    ],
    "ignores": [
      "@types/*",
      "assert",
      "c8",
      "@hash-stream/eslint-config"
    ]
  },
  "engines": {
    "node": ">=16.15"
  }
}
