{
  "name": "nginx-for-ipfs",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Off-the-shelf Trustless HTTP Server for Content-Addressable Data",
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "clean": "rm -rf docs node_modules pnpm-lock.yaml packages/*/{pnpm-lock.yaml,coverage,.nyc_output,dist,node_modules,.next}",
    "lint": "pnpm -r --if-present run lint",
    "test": "pnpm -r --if-present run test",
    "check": "pnpm -r --if-present run check",
    "build": "pnpm -r --if-present run build"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "lint-staged": "^15.4.3",
    "prettier": "2.8.3",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "depcheck": "^1.4.7",
    "typedoc-plugin-missing-exports": "^3.1.0"
  },
  "keywords": [
    "serverless",
    "index",
    "cloud",
    "elastic",
    "verifiable",
    "content",
    "addressable",
    "ipfs"
  ],
  "author": "Vasco Santos",
  "license": "Apache-2.0 OR MIT"
}
